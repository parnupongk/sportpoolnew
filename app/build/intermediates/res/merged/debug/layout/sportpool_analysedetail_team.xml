<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SportPool_Program"
    android:background="@drawable/bg" >
    
	
	<RelativeLayout
	    android:id="@+id/analysedetail_layout_team1"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:layout_alignParentTop="true">
	    
	    <TextView
	        android:id="@+id/analysedetail_txtstat_team1"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_alignParentTop="true"
        	style="@style/TextGreenBold"
        	android:layout_marginLeft="10dp"/>
	    
	   <LinearLayout 
	        android:id="@+id/analysedetail_header_team1"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_below="@+id/analysedetail_txtstat_team1"></LinearLayout>
	<ListView
        android:id="@+id/analysedetail_list_team1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analysedetail_header_team1"
        />
	
	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/analysedetail_layout_team2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analysedetail_layout_team1">
	
	    <TextView
	        android:id="@+id/analysedetail_txtstat_team2"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_alignParentTop="true"
        	style="@style/TextGreenBold"
        	android:layout_marginLeft="10dp"/>
	    
	    <LinearLayout 
	        android:id="@+id/analysedetail_header_team2"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_below="@+id/analysedetail_txtstat_team2"></LinearLayout>
	    
	<ListView
        android:id="@+id/analysedetail_list_team2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/analysedetail_header_team2"/>
	
	</RelativeLayout>
	
</RelativeLayout>