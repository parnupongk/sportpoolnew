<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@android:color/transparent"
    android:layout_marginLeft="20dp">
    
 <RelativeLayout 
        android:id="@+id/subprogram_layout_detail"
        android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:orientation="horizontal"
  		android:layout_below="@+id/subprogram_layout_league"
  		android:background="@drawable/bg_white">
        
        
        <ImageView android:id="@+id/sub_program_liketeam1"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_alignParentLeft="true"
  			android:layout_centerVertical="true"
  			android:layout_centerHorizontal="true"/>
        
  		<TextView
  			android:id="@+id/sub_program_team1"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_toLeftOf="@+id/sub_program_layout_time"
  			style="@style/TextBack19"
  			android:layout_centerVertical="true"
  			android:gravity="center_horizontal"
			android:singleLine="true"
  		/>
  		
  		<RelativeLayout
  			android:orientation="vertical"
  			android:id="@+id/sub_program_layout_time"
  			android:layout_width="wrap_content"
  			android:layout_height="fill_parent"
  			android:layout_centerInParent="true"
  			android:background="@drawable/bg_white"
  		>
  		
  		    <TextView
	  			android:id="@+id/sub_program_channel"
	  			android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
  				android:layout_marginTop="10dp"
  				android:layout_centerHorizontal="true"
  				style="@style/TextBack"
	  		/>
  		    
  		    <TextView
	  			android:id="@+id/sub_program_time"
	  			android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
  				android:layout_marginTop="10dp"
  				android:layout_centerHorizontal="true"
  				android:layout_below="@+id/sub_program_channel"
				android:singleLine="true"
  				style="@style/TextBack"
	  		/>
	  		
	  		
  		</RelativeLayout>
  		

  		
  		<TextView
  			android:id="@+id/sub_program_team2"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_centerVertical="true"
 			style="@style/TextBack19"
			android:singleLine="true"
 			android:layout_toRightOf="@+id/sub_program_layout_time"
 			android:gravity="center_horizontal"
  		/>
  	
  		<ImageView android:id="@+id/sub_program_liketeam2"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_alignParentRight="true"
  			android:layout_centerVertical="true"/>
  		
  		
  </RelativeLayout>

