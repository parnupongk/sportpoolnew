<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
	android:background="@drawable/bg">
  
  <LinearLayout 
     android:id="@+id/table_layout_pool_detail"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_alignParentTop="true"
  	android:orientation="vertical"
  	android:layout_marginLeft="10dp">
  	
      <TextView
  		android:id="@+id/pool_txt_hdetail"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		style="@style/TextGreenBold"
  	/>
      
      <TextView
  		android:id="@+id/pool_txt_detail"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		style="@style/TextScore15"
  		android:layout_marginLeft="10dp"
  	/>
      
      <TextView
  		android:id="@+id/pool_txt_hdetail1"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		style="@style/TextGreenBold"
  	/>
      
      <TextView
  		android:id="@+id/pool_txt_detail1"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		style="@style/TextScore15"
  		android:layout_marginLeft="10dp"
  	/>
      
  </LinearLayout>
  
   <LinearLayout
  	android:id="@+id/table_layout_pool_league"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@+id/table_layout_pool_detail"
  	android:gravity="center_vertical">
      
  	<ImageView
  		android:id="@+id/table_league_pool_img"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  	/>
  	
  	<TextView
  		android:id="@+id/table_league_pool_text"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		style="@style/TextGreenBold"
  	/>
  </LinearLayout>
  
  <LinearLayout
  	android:id="@+id/table_layout_pool_data"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_below="@+id/table_layout_pool_league"
  	android:orientation="vertical">
  	
		  	<TableLayout
		  		android:id="@+id/table_layout_pool_table"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  	/>
		  	<TextView
		  		android:id="@+id/table_star_pool_text"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  	/>


  </LinearLayout>
</RelativeLayout>